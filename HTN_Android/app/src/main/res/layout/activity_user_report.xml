<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserReport">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_layer"/>
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/app_toolbar"
        android:elevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REPORT"
                android:textSize="40sp"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowColor="#CB6A6A6A"
                android:shadowRadius="3"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:textAppearance="@style/TitleStyle"
                />
            <ImageButton
                android:id="@+id/usr_report_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"/>
        </RelativeLayout>
    </Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:background="#80FFFFFF"
        android:layout_centerVertical="true"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_lightstroke"
                android:hint="Name"
                android:textAppearance="@style/regularText"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColorHint="#939393"
                android:padding="15dp"/>
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_lightstroke"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textAppearance="@style/regularText"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"                android:textColorHint="#939393"
                android:padding="15dp"/>
            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_lightstroke"
                android:hint="Phone number"
                android:inputType="phone"
                android:textAppearance="@style/regularText"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"                android:textColorHint="#939393"
                android:padding="15dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"                android:background="@drawable/card_lightstroke">
                <Spinner
                    android:id="@+id/parking_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#939393"
                    android:padding="15dp"
                    android:entries="@array/parking_list"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_lightstroke"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:layout_alignParentTop="true"
                    android:textAppearance="@style/regularText"
                    android:textColor="#939393"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"/>
                <EditText
                    android:id="@+id/edt_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/regularText"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:gravity="start|top"
                    android:textAlignment="viewStart"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/no_stroke_edt"
                    android:scrollbars="vertical"
                    android:layout_marginTop="25dp"
                    android:maxLines="10"
                    android:minLines="5"
                    android:padding="8dp"/>
            </RelativeLayout>
            <Button
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="SEND"
                android:textAppearance="@style/ButtonText"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/blue_button"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>